<% @page_title = "アカウント情報の編集" %>

<h1><%= @page_title %></h1>

<%= form_for @user, as: "account", url: :account do |form| %>
  <%= render "shared/user_form", form: form %>
  <div><%= form.submit "会員情報を更新する" %></div>
  <div class="modoru_button"><%= button_to "マイアカウントに戻る", :account %></div>
<% end %>
